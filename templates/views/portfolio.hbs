<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-12">
      <article>
        <p><a href="/portfolio-items">&larr; Back to products</a></p>
        <hr>
        <header>
          <h1>{{data.portfolio.title}}</h1>
        </header>
        <div class="row">
          <div class="col-md-6 col-lg-6">
            {{#if data.portfolio.image}}
                 <img src="{{cloudinaryUrl data.portfolio.image.url crop='fit'}}"  class="img-responsive" alt="" />
            {{/if}}
          </div>
          {{{data.portfolio.image}}}
          <div class="col-md-6 col-lg-6">
            
            <div class="well">
              <p>{{{data.portfolio.description}}}</p>
              
            </div>
             <a class="btn btn-success btn-block" href="/contact">Ask about this product!</a>
          </div>
        </div>

      </article>
    </div>
  </div>
</div>