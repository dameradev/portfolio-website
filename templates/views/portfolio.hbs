<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="portfolio">
  <div class="portfolio-area">
    <div class="portfolio-description">
      <h1>{{data.portfolio.title}}</h1>

      <span class="description">{{{data.portfolio.description}}}</span>

      <a href={{{data.portfolio.gitLink}}} class="git-logo"> <i class="fa fa-github" > GitHub</i></a>
    </div>

    <div class="image">
      {{#if data.portfolio.image}}
            <img src="{{cloudinaryUrl data.portfolio.image crop='fit'}}"  class="img-responsive" alt="" />
      {{/if}}
    </div>
  </div>
  {{!-- <div class="numbertext">1 / 3</div>
<div class="text">Caption Text</div>
   --}}
    
  <div class="portfolio-details">
    <a class="btn btn-success btn-block" href="/contact">Ask about this project!</a>
    <p><a href="/portfolio-items">&larr; Back to portfolio list</a></p>
  </div>
</div>

<div class="slideshow-container">
  <div class="slideshow-title">
    <h1>Image Gallery of the project</h1>
  </div>

  <!-- Full-width images with number and caption text -->
  
    {{#if twitterGallery}}
		{{#each twitterGallery}}
		
						{{#each images}}
  <div class="mySlides fade">
    
            <div class="gallery-img">
							<img src="{{cloudinaryUrl }}"  crop="cover" >
            </div>  
						
    
  </div>
  {{/each}}

		{{/each}}
	{{/if}}
<div class="dots" style="text-align:center">
  <div>
    <span class="dot" onclick="currentSlide(1)"></span> 
    <span class="dot" onclick="currentSlide(2)"></span> 
    <span class="dot" onclick="currentSlide(3)"></span> 
    <span class="dot" onclick="currentSlide(4)"></span> 
  </div>
</div>
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>




<script src="../../js/slider.js"></script>