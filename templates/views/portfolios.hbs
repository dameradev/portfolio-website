<link rel="stylesheet" href="styles/site/portfolios.css">
<div class="portfolio-wrapper">
  <h1 class="page-title">My personal portfolio</h1>
    {{#each portfolios}}
      <div class="portfolio-item">
        <a href="{{portfolioUrl slug}}">
        <div class="portfolio-desc">
          <h2>{{{title}}}</h2>
          {{{description}}}
        </div>
        
        
        {{#if image}}
        <div class="image">
          <img src="{{{cloudinaryUrl image crop="fit" }}}" alt="">        
        </div>
        {{/if}}
        </a> 
      </div>
    {{/each}}  
</div>
